{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "ValueObjectSchematic",
	"title": "Create a value object",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"path": {
			"type": "string",
			"format": "path",
			"description": "The path to create the schematic within.",
			"visible": false,
			"$default": {
				"$source": "workingDirectory"
			}
		},
		"name": {
			"description": "Specifies the name of the generated files.",
			"type": "string",
			"$default": {
				"$source": "argv",
				"index": 0
			},
			"x-prompt": "What name would you like to use for the entity?"
		},
		"project": {
			"type": "string",
			"description": "The name of the project.",
			"$default": {
				"$source": "projectName"
			}
		},
		"flat": {
			"type": "boolean",
			"description": "When true, creates the new files at the top level of the current project.",
			"default": false
		}
	},
	"required": ["name"]
}
