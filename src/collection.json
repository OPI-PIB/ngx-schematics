{
	"$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
	"schematics": {
		"init": {
			"factory": "./init/schematic",
			"schema": "./init/schema.json",
			"description": "Initialize the @opi_pib/ngx-schematics plugin",
			"aliases": ["ng-add"],
			"hidden": true
		},
		"entity": {
			"description": "Create an entity",
			"factory": "./domain/entity/index",
			"schema": "./domain/entity/schema.json"
		},
		"vo": {
			"description": "Create a value object",
			"factory": "./domain/vo/index",
			"schema": "./domain/vo/schema.json"
		},
		"voDto": {
			"description": "Create a value object from dto",
			"factory": "./domain/voDto/index",
			"schema": "./domain/voDto/schema.json"
		}
	}
}
