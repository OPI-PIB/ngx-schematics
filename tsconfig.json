{
	"compilerOptions": {
		"baseUrl": "tsconfig",
		"declaration": true,
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"isolatedModules": true,
		"noEmitOnError": true,
		"noImplicitThis": true,
		"skipDefaultLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"typeRoots": ["node_modules/@types"],
		"rootDir": "src",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"lib": ["ES2022", "DOM"]
	},
	"include": ["src/**/*"],
	"exclude": ["src/*/files/**/*", "src/api"]
}
